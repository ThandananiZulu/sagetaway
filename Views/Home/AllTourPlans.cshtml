@{
    ViewData["Title"] = "All Tour Plans";
}

<div class="container mt-5">
    <!-- Create Tour Plan Button -->
    <div class="text-center mb-4">
        <button class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#createTourPlanModal">
            <i class="fas fa-plus-circle"></i> Create Tour Plan
        </button>
    </div>

    <!-- Create Tour Plan Modal -->
    <div class="modal fade" id="createTourPlanModal" tabindex="-1" aria-labelledby="createTourPlanModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createTourPlanModalLabel">Create Tour Plan</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="tourPlanName" class="form-label">Tour Plan Name</label>
                        <input type="text" class="form-control" id="tourPlanName" placeholder="Enter your tour plan name">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </div>

    <!-- List of Tour Plans -->
    <div class="row gy-4">
        <!-- Dummy Tour Plan 1 -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class=" text-success"></i> Durban Highlights
                    </h5>
                    <p class="card-text">
                        <strong>Price:</strong> R2,050
                    </p>
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Home" asp-action="TourPlan">
                            <i class="fas fa-eye" ></i> View Tour Plan
                        </a>
                        <button class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Dummy Tour Plan 2 -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class=" text-warning"></i> Beach Getaway
                    </h5>
                    <p class="card-text">
                        <strong>Price:</strong> R3,100
                    </p>
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Home" asp-action="TourPlan">
                            <i class="fas fa-eye"></i> View Tour Plan
                        </a>
                        <button class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Dummy Tour Plan 3 -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class=" text-primary"></i> Mountain Adventure
                    </h5>
                    <p class="card-text">
                        <strong>Price:</strong> R4,500
                    </p>
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Home" asp-action="TourPlan">
                            <i class="fas fa-eye"></i> View Tour Plan
                        </a>
                        <button class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Dummy Tour Plan 4 -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class=" text-info"></i> Urban Explorer
                    </h5>
                    <p class="card-text">
                        <strong>Price:</strong> R1,800
                    </p>
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Home" asp-action="TourPlan">
                            <i class="fas fa-eye"></i> View Tour Plan
                        </a>
                        <button class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

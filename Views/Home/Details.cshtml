@{
    ViewData["Title"] = "Details Page";
}
<div class="modal fade" id="addToTourPlanModal" tabindex="-1" aria-labelledby="addToTourPlanLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h5 class="modal-title" id="addToTourPlanLabel">
                    <i class="fas fa-map"></i> Add to Tour Plan
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <!-- Modal Body -->
            <div class="modal-body">
                <!-- Existing Tour Plans Section -->
                <div class="mb-3">
                    <label for="existingTourPlans" class="form-label">
                        <i class="fas fa-folder-open"></i> Add to Existing Tour Plan
                    </label>
                    <select class="form-select" id="existingTourPlans">
                        <option value="">Select an existing tour plan</option>
                        <option value="plan1">Family Vacation</option>
                        <option value="plan2">Adventure Weekend</option>
                    </select>
                    <button class="btn btn-sm btn-success mt-2" onclick="saveExistingPlan()">
                        <i class="fas fa-save"></i> Save
                    </button>
                    <!-- Label below dropdown -->
                    <div id="existingPlanLabel" class="mt-2 text-success d-none">
                        Added  <strong>  Ushaka Marine World</strong> to: <strong id="selectedExistingPlan"></strong>
                    </div>
                </div>

                <!-- New Tour Plan Section -->
                <div class="mb-3">
                    <label for="newTourPlan" class="form-label">
                        <i class="fas fa-plus-circle"></i> Or Create a New Tour Plan
                    </label>
                    <input type="text" class="form-control" id="newTourPlan" placeholder="Untitled_1">
                    <button class="btn btn-sm btn-success mt-2" onclick="saveNewPlan()">
                        <i class="fas fa-save"></i> Save
                    </button>
                    <!-- Label below input -->
                    <div id="newPlanLabel" class="mt-2 text-success d-none">
                        Created: <strong id="createdNewPlan"></strong> and Added  <strong>  Ushaka Marine World</strong> 
                    </div>
                </div>
            </div>
            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Close
                </button>
                <button type="button" class="btn btn-primary">
                    Submit
                </button>
            </div>
        </div>
    </div>
</div>
<div class="container mt-4 d-flex flex-column align-items-center">
    <!-- Carousel Section -->
    <div id="detailsCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
        <div class="carousel-inner" style="height: 320px; width: 100%;">
            <div class="carousel-item active">
                <img src="https://21century.zakheletech.co.za/assets/img/logo.png" class="d-block w-100 h-100" alt="Image 1">
            </div>
            <div class="carousel-item">
                <img src="https://21century.zakheletech.co.za/assets/img/logo.png" class="d-block w-100 h-100" alt="Image 2">
            </div>
            <div class="carousel-item">
                <img src="https://21century.zakheletech.co.za/assets/img/logowithname.png" class="d-block w-100 h-100" alt="Image 3">
            </div>
            <div class="carousel-item">
                <img src="https://21century.zakheletech.co.za/assets/img/mastervisa.png" class="d-block w-100 h-100" alt="Image 4">
            </div>
            <div class="carousel-item">
                <img src="https://21century.zakheletech.co.za/assets/img/admin-logo.png" class="d-block w-100 h-100" alt="Image 5">
            </div>
        </div>
        <!-- Blocks for Navigation -->
        <div class="d-flex justify-content-center ">
            <button class="btn btn-outline-primary mx-1" data-bs-target="#detailsCarousel" data-bs-slide-to="0">1</button>
            <button class="btn btn-outline-primary mx-1" data-bs-target="#detailsCarousel" data-bs-slide-to="1">2</button>
            <button class="btn btn-outline-primary mx-1" data-bs-target="#detailsCarousel" data-bs-slide-to="2">3</button>
            <button class="btn btn-outline-primary mx-1" data-bs-target="#detailsCarousel" data-bs-slide-to="3">4</button>
            <button class="btn btn-outline-primary mx-1" data-bs-target="#detailsCarousel" data-bs-slide-to="4">5</button>
        </div>
    </div>

    <!-- Thing Details -->
    <div class="text-center mb-4">
        <h2>Thing Name</h2>
        <p>Contact: 0817109730</p>
        <p>Location: Thing Location</p>
        <p>Last Price Update: <span>Date</span></p>
    </div>

    <!-- Google Maps Embed -->
    <div class="mb-4" style="width: 100%; max-width: 600px; height: 300px;">
        <iframe src="https://www.google.com/maps/embed?pb=!1m0!3m2!1sen!2sza!4v1638216936191!6m8!1m7!1sCAoSLEFGMVFpcE43OWYtQ2x4S2FKTTM5V2xPdDZtOWtmU1U0QU1vY2ZVYkVnMUNw!2m2!1d-29.8587!2d31.0218!3f0!4f0!5f1.2" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
    </div>

    <!-- Quantity Selectors -->
    <div class="mb-4 text-center" style="max-width: 300px;">
        <div class="d-flex align-items-center justify-content-between mb-2">
            <label for="adultCount" class="me-2">Adult:</label>
            <button class="btn btn-outline-secondary" onclick="adjustCount('adultCount', -1)">-</button>
            <span id="adultCount" class="mx-2">0</span>
            <button class="btn btn-outline-secondary" onclick="adjustCount('adultCount', 1)">+</button>
        </div>
        <div class="d-flex align-items-center justify-content-between mb-2">
            <label for="childCount" class="me-2">Child:</label>
            <button class="btn btn-outline-secondary" onclick="adjustCount('childCount', -1)">-</button>
            <span id="childCount" class="mx-2">0</span>
            <button class="btn btn-outline-secondary" onclick="adjustCount('childCount', 1)">+</button>
        </div>
        <div class="d-flex align-items-center justify-content-between">
            <label for="infantCount" class="me-2">Infant:</label>
            <button class="btn btn-outline-secondary" onclick="adjustCount('infantCount', -1)">-</button>
            <span id="infantCount" class="mx-2">0</span>
            <button class="btn btn-outline-secondary" onclick="adjustCount('infantCount', 1)">+</button>
        </div>
    </div>

    <!-- Price Section -->
    <div class="mb-4 text-center">
        <h3 class="text-primary">Price: R500</h3>
    </div>

    <!-- Add to Tour Plan Button -->
    <div class="text-center mb-4">
        <button class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#addToTourPlanModal">
            <i class="fas fa-plus-circle"></i> Add to Tour Plan
        </button>
    </div>

    <!-- Description and Information -->
    <div>
        <h4>Description and Information</h4>
        <p>uShaka Marine World is a world-class marine theme park located in Durban Central, South Africa. It offers an unforgettable experience with its water rides, aquarium, and cultural shows. Visitors can enjoy the scenic beauty of the coastline while exploring marine life up close. Perfect for family outings and adventures!</p>
    </div>
</div>

<script>
    function adjustCount(id, increment) {
        const element = document.getElementById(id);
        let currentValue = parseInt(element.textContent, 10);
        currentValue = Math.max(0, currentValue + increment); // Prevent negative values
        element.textContent = currentValue;
    }
    function saveExistingPlan() {
          const selectedPlan = document.getElementById("existingTourPlans").value;
          const label = document.getElementById("existingPlanLabel");
          const labelText = document.getElementById("selectedExistingPlan");

          if (selectedPlan) {
              label.classList.remove("d-none");
              labelText.textContent = selectedPlan;
          } else {
              label.classList.add("d-none");
          }
      }

      function saveNewPlan() {
          const newPlanName = document.getElementById("newTourPlan").value.trim();
          const label = document.getElementById("newPlanLabel");
          const labelText = document.getElementById("createdNewPlan");

          if (newPlanName) {
              label.classList.remove("d-none");
              labelText.textContent = newPlanName;
          } else {
              label.classList.add("d-none");
          }
      }</script>
